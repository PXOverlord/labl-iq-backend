
# Database Configuration
DATABASE_URL=postgresql://username:password@hostname:5432/database_name

# JWT Configuration (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=your-super-secret-key-for-access-tokens-change-this-in-production
REFRESH_SECRET_KEY=your-super-secret-key-for-refresh-tokens-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_MINUTES=10080

# Application Settings
APP_NAME=Labl IQ Rate Analyzer
APP_VERSION=1.0.0
ENVIRONMENT=production
DEBUG=false

# CORS Configuration (Add your frontend domain)
CORS_ORIGINS=https://your-frontend-domain.vercel.app,https://your-custom-domain.com

# File Upload Settings
MAX_UPLOAD_SIZE=52428800
ALLOWED_EXTENSIONS=csv,xlsx,xls

# Amazon Rate Settings
DEFAULT_AMAZON_RATE=0.50
DEFAULT_FUEL_SURCHARGE=0.16

# PostgreSQL Database Settings (for Railway/Render)
POSTGRES_DB=labl_iq_db
POSTGRES_USER=labl_iq_user
POSTGRES_PASSWORD=your-secure-database-password

# Railway/Render specific
PORT=8000
