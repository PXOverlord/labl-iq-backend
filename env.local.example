# Local Development Environment Configuration
# Copy this file to .env for local development

# Database Configuration
DATABASE_URL=postgresql://labl_iq_user:labl_iq_password@localhost:5432/labl_iq_db?schema=public

# JWT Configuration (Change these in production!)
SECRET_KEY=dev-secret-key-change-in-production-2025
REFRESH_SECRET_KEY=dev-refresh-secret-key-change-in-production-2025

# Application Settings
ENVIRONMENT=development
DEBUG=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000

# Performance Settings
ZONE_MATRIX_CACHE_ENABLED=true
ZONE_MATRIX_CACHE_TTL=3600
API_RATE_LIMIT=1000

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Redis (optional for caching)
REDIS_URL=redis://localhost:6379

# File Upload Settings
MAX_UPLOAD_SIZE=52428800  # 50MB in bytes
ALLOWED_EXTENSIONS=csv,xlsx,xls

# Amazon Rate Settings
DEFAULT_AMAZON_RATE=0.50
DEFAULT_FUEL_SURCHARGE=0.16
